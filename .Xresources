! 设置字体分辨率
! Xft.dpi:96
Xft.dpi: 144.0
Xft.antialias:1
Xft.hinting:1
Xft.autohint:1
Xft.hintstyle:hintslight
Xft.rgba:rgb
Xft.lcdfilter:lcddefault

!!=============================================================================
!! RXVT-unicode setting
!! ubuntu 安装 sudo apt-get install rxvt-unicode
!!=============================================================================
!设置字体，其中的"14"代表字号大小
URxvt.font:-misc-fixed-medium-r-normal--34-*-*-*-*-*-iso10646-1,xft:WenQuanYi Bitmap Song:size=12 
!颜色
Rxvt.background:black
Rxvt.foreground:white
kxvt.colorBD:yellow
Rxvt.colorUL:green
!滚动条
Rxvt.scrollBar:True
Rxvt.scrollBar_right:True
Rxvt.scrollBar_floating: False
Rxvt.scrollstyle:plain
!屏幕缓冲
Rxvt.saveLines:10000
Rxvt.color12:DodgerBlue
Rxvt.menu:/etc/X11/rxvt.menu
Rxvt.preeditType:Root
!输入法设置
!inputMethod:xim

URxvt.transparent: true
URxvt.shading: 20